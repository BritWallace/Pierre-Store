@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model List<Pierre.Models.Flavor>

<h2>Flavors</h2>

@if (@Model.Count == 0)
{
  <p>There are no flavors in the system.</p>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
  }
</ul>

<p>@Html.ActionLink("Add flavor", "Create")</p>