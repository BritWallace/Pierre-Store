@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model List<Pierre.Models.Treat>

<h2>Treats</h2>

@if (@Model.Count == 0)
{
  <p>There are no treats in the system.</p>
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</li>
  }
</ul>

<p>@Html.ActionLink("Add treat", "Create")</p>